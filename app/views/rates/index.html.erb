<h1>Listing transfer rates</h1>

<table class="table table-hover">
    <tr>
        <th>Transferring program</th>
        <th>Transferee program</th>
        <th>Transfer ratio</th>
        <th>Transfer notes</th>
    </tr>
    
    <% @rates.each do |tr| %>
        <tr>
            <td><%= tr.transferringprogram %></td>
            <td><%= tr.transfereeprogram %></td>
            <td><%= tr.transferratio %></td>
            <td><%= tr.transfernotes %></td>
            <td><%= link_to 'Show', rate_path(tr), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Edit', edit_rate_path(tr), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', rate_path(tr), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

<%= link_to 'Home', root_path, class: 'btn btn-primary' %>
