<h1>Listing credit cards</h1>

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Issuer</th>
    </tr>
    
    <% @creditcards.each do |cc| %>
        <tr>
            <td><%= cc.name %></td>
            <td><%= cc.issuer %></td>
            <td><%= link_to 'Show', creditcard_path(cc), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Edit', edit_creditcard_path(cc), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', creditcard_path(cc), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

<%= link_to 'Home', root_path, class: 'btn btn-primary' %>
<%= link_to 'Request to have a card added', new_creditcard_path, class: 'btn btn-primary' %>
