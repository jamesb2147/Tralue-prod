<h1>Tralue - Editing trip</h1>

<%= form_for :trip, url: trip_path(@trip), method: :patch do |t| %>

    <% if @trip.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@trip.errors.count, "error") %> prevented this credit card from being updated:
            </h2>
            <ul>
                <% @trip.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= render 'form' %>
    
<% end %>

<%= link_to 'Back', trips_path %>