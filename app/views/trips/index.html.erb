<h1>Listing trips</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Cost in USD</th>
        <th>AA cost in points</th>
        <th>AA cost in USD</th>
        <th>BA pts</th>
        <th>BA USD</th>
        <th>UA pts</th>
        <th>UA USD</th>
        <th>DL pts</th>
        <th>DL USD</th>
        <th>AS pts</th>
        <th>AS USD</th>
        <th>NK pts</th>
        <th>NK USD</th>
        <th>SQ pts</th>
        <th>SQ USD</th>
        <th>LA pts</th>
        <th>LA USD</th>
        <th>AC pts</th>
        <th>AC USD</th>
    </tr>
    
    <% @trips.each do |t| %>
        <tr>
            <td><%= t.name %></td>
            <td><%= t.costinusd %></td>
            <td><%= t.aacostpts %></td>
            <td><%= t.aacostusd %></td>
            <td><%= t.bacostpts %></td>
            <td><%= t.bacostusd %></td>
            <td><%= t.uacostpts %></td>
            <td><%= t.uacostusd %></td>
            <td><%= t.dlcostpts %></td>
            <td><%= t.dlcostusd %></td>
            <td><%= t.ascostpts %></td>
            <td><%= t.ascostusd %></td>
            <td><%= t.nkcostpts %></td>
            <td><%= t.nkcostusd %></td>
            <td><%= t.sqcostpts %></td>
            <td><%= t.sqcostusd %></td>
            <td><%= t.lacostpts %></td>
            <td><%= t.lacostusd %></td>
            <td><%= t.accostpts %></td>
            <td><%= t.accostusd %></td>
            <td><%= link_to 'Show', trip_path(t) %></td>
            <td><%= link_to 'Edit', edit_trip_path(t) %></td>
            <td><%= link_to 'Destroy', trip_path(t), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'View recommendations', result_path(t) %></td>
        </tr>
    <% end %>
</table>
<%= link_to 'New trip', new_trip_path %>
